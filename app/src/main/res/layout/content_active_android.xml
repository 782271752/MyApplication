<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_active_android"
    tools:context="com.example.administrator.test.activeandroid.ActiveAndroidActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"
        android:id="@+id/add"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="del"
        android:id="@+id/del"
        android:layout_below="@+id/add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"
        android:id="@+id/update"
        android:layout_below="@+id/del"
        android:layout_alignRight="@+id/del"
        android:layout_alignEnd="@+id/del" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/active_recyler_list"
        android:layout_toRightOf="@id/add"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


</RelativeLayout>
